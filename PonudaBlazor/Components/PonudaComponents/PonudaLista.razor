@using FrontEnd.FrontEndDomain

@if(Ponude == null || Ponude.Count == 0)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
    <thead>
        <tr>
            <th>Status</th>
            <th>Datum pristizanja</th>
            <th>Zakonski zastupnik</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ponuda in Ponude)
        {
            <tr>
                <td>@ponuda.Status</td>
                <td>@ponuda.DatumPristizanja</td>
                <td>@ponuda.ZakonskiZastupnik</td>
                <td><span class="oi oi-external-link" @onclick="() => PassBack(ponuda.Id)"></span></td>
            </tr>
        }
    </tbody>

</table>
}

@code
{
    [Parameter]
    public List<Ponuda> Ponude { get; set; } = Enumerable.Empty<Ponuda>().ToList();

    [Parameter]
    public EventCallback<Guid> OnClickCallBack { get; set; }

    private async Task PassBack(Guid id)
    {
       await OnClickCallBack.InvokeAsync(id);
    }

}